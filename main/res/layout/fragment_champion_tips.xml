<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.alex.lolchampions.MainActivity"
    android:id="@+id/mainOuterLayout"
    android:gravity="center_horizontal"
    android:background="#000">


    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:id="@+id/mainScrollView" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/mainInnerLayout">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/titleChampionTipsAlly"
                android:textSize="44dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="Ally Tips"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textChampionTipsAlly"
                android:textSize="24dp"
                android:layout_gravity="center_vertical"
                android:gravity="start|center_vertical" />

            <View
                android:layout_width="match_parent"
                android:layout_height="20px"
                android:background="@color/white"
                android:layout_marginTop="30px"
                android:layout_marginBottom="30px"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/titleChampionTipsEnemy"
                android:textSize="44dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="Enemy tips"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textChampionTipsEnemy"
                android:textSize="24dp"
                android:layout_gravity="center_vertical"
                android:gravity="start|center_vertical" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>